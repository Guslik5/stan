<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Title</title>
  <link rel="stylesheet" href="/css/header.css">
  <link rel="stylesheet" href="/css/categories.css">
  <link rel="stylesheet" href="/css/footer.css">
</head>

<body>
<header>
  <div class="logo"><img src="/images/icons/LogoStan.png" alt="logo"></div>
  <ul class="menu">
    <li><a href="/main.html" class="nav">Главная</a></li>
    <li><a href="/products.html" class="nav">Товары</a></li>
    <li><a href="/aboutСompany.html" class="nav">О компании</a></li>
    <li><a href="/basket.html" class="nav">Корзина</a></li>
    <li><a href="/contacts.html" class="nav">Контакты</a></li>
  </ul>
</header>

<div class="lineHeader">

</div>
<div class="mainText">
  <% nameCategory.map(product => { %><%= product.name%><% })%>
</div>
<ul class="List-categories" >
  <% products.map((product, index)=> { %>
    <li class="List-categories_item" >
      <div class="List-categories_item-name">
        <%= product.name%>
        <button class="List-categories_item-button" onclick="window.location=`/stan/product/${<%= product.id%>}`">Подробнее</button>
      </div>
    </li>
  <% })%>
</ul>

<footer>
  <div class="footer_info">
    <div class="footer_info-block">
      <div class="main-footer">
        Отдел продаж
      </div>
      <div class="secondary-footer">
        <p class="head-footer">Телефон:</p>
        <p class="secondaryText-footer">(812) 322-80-77</p>
        <p class="head-footer">Электроннаяя почта:</p>
        <p class="secondaryText-footer">sale@stanorg.ru</p>
      </div>
    </div>
    <div class="footer_info-block">
      <div class="main-footer">
        Отдел Снабжения
      </div>
      <div class="secondary-footer">
        <p class="head-footer">Телефон:</p>
        <p class="secondaryText-footer">(812) 380-82-76</p>
        <p class="head-footer">Электроннаяя почта:</p>
        <p class="secondaryText-footer">zakupka@stanorg.ru</p>
      </div>
    </div>
  </div>
  <img src="images/icons/LogoStanFooter.svg">
  <div class="footer_date">
    © 2024
  </div>
</footer>
</body>
<script type="text/javascript" src="/js/backgroundProduct.js"></script>
</html>